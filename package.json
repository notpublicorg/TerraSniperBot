{
  "name": "terra-sniper-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "babel": "babel-node --extensions \".ts,.tsx\"",
    "start:dev": "nodemon --exec yarn babel src/index.ts",
    "start:play": "yarn babel src/terra-processor/playground.ts",
    "build": "babel --extensions \".ts,.tsx\" src -d dist/bot",
    "start:prod": "node dist/bot/index.js",
    "build:api": "babel --extensions \".ts,.tsx\" api -d dist",
    "build:api:test": "babel --extensions \".ts,.tsx\" test -d dist",
    "start:api:prod": "yarn build:api:test && yarn build:api && node dist/api.js",
    "lint": "eslint \"{src,api}/**/*.ts\" --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "ts:check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest src",
    "test:integration": "jest integration-tests",
    "verify": "yarn lint && yarn ts:check && yarn test:unit"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.2.1",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@terra-money/terra.js": "^2.0.14",
    "@terra-money/terra.proto": "^0.1.7",
    "rxjs": "^7.3.0"
  }
}
